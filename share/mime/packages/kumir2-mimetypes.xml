<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">

  <mime-type type="application/vnd.niisi.kumir2.program">
      <comment>Kumir Program</comment>
      <comment xml:lang="ru">Программа на языке Кумир</comment>
      <glob pattern="*.kum"/>
      <generic-icon name="kumir2-kum"/>
  </mime-type>

  <mime-type type="application/vnd.niisi.kumir2.bytecode">
      <comment>Kumir Executable Bytecode</comment>
      <comment xml:lang="ru">Выполняемый код программы Кумир</comment>
      <glob pattern="*.kod"/>
      <generic-icon name="kumir2-kod"/>
  </mime-type>

</mime-info>
