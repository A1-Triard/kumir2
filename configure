#!/bin/bash

if [ -e /usr/bin/qmake ]
then
    QMAKE_BIN=/usr/bin/qmake
fi

if [ -e /usr/bin/qmake-qt4 ]
then
    QMAKE_BIN=/usr/bin/qmake-qt4
fi

if [ -e /usr/local/bin/qmake ]
then
    QMAKE_BIN=/usr/local/bin/qmake
fi

if [ -e /usr/local/bin/qmake-qt4 ]
then
    QMAKE_BIN=/usr/local/bin/qmake-qt4
fi

${QMAKE_BIN} CONFIG+=llvm
